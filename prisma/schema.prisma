datasource db {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Domain {
  domain    String   @id
  site      String?   
  status    String
  timestamp BigInt
  expires   BigInt
  pubkey    String?
  // last time it was rendered
  rendered  BigInt @default(0)
  // last time it was updated, if < rendered => needs render
  updated   BigInt @default(0)
  // when initial fetch was performed
  fetched   BigInt @default(0) 

  @@index([fetched])
}

model EventQueue {
  id        Int  @id @default(autoincrement())
  domain    String
  eventId   String
  timestamp BigInt
}

